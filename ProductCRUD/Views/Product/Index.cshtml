@model List<Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td width="50%">@product.Name</td>
                    <td width="30%">@product.Price</td>
                    <td width="20%">
                        <div class="btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-productId="@product.ProductId"
                               class="btn btn-primary btn-sm mx-1">
                                <i class="bi bi-pencil-square fs-6"></i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-productId="@product.ProductId"
                               class="btn btn-danger btn-sm mx-1">
                                <i class="bi bi-trash-fill fs-6"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

